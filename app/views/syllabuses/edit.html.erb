<% provide(:title, t('edit_resource', resource: t('activerecord.models.syllabus'))) %>
<% provide :card_title, t('activerecord.models.syllabus') %>

<%= render 'shared/cards/form_card' do %>
  <%= render 'form', syllabus: @syllabus %>
  <% content_for :back_button do %>
    <%= link_to t('show'), @syllabus, class: 'btn btn-sm btn-info' %>
    <%= link_to t('back'), syllabuses_path, class: 'btn btn-sm btn-danger' %>
  <% end %>
<% end %>
