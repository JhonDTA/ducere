<table>
  <thead>
  <tr>
    <th>Code</th>
    <th>Description</th>
    <th>Campus</th>
    <th>Status</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @buildings.each do |building| %>
    <tr>
      <td><%= building.code %></td>
      <td><%= building.description %></td>
      <td><%= building.campus.name %></td>
      <td><%= building.status.name %></td>
      <td><%= link_to t('show'), building %></td>
      <td><%= link_to t('edit'), edit_building_path(building) %></td>
      <td><%= link_to t('destroy'), building, method: :delete, data: { confirm: t('you_sure') } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Building', new_building_path %>
<%= will_paginate @buildings %>
