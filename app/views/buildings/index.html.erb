<% provide(:title, t('buildings')) %>

<% content_for :card_header do %>
  <%= will_paginate @buildings, class: 'pagination-sm float-right',
                    :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer %>
<% end %>

<% content_for :card_footer do %>
  <%= link_to t('new_resource', resource: t('activerecord.models.building')),
              new_building_path, class: 'btn btn-sm btn-primary' %>
  <%= will_paginate @buildings, class: 'pagination-sm m-0 float-right',
                    :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer %>
<% end %>

<%= render 'shared/tables/index_card' do %>
  <table class="table table-hover table-head-fixed text-nowrap">
    <thead>
    <tr>
      <th>Code</th>
      <th>Description</th>
      <th>Campus</th>
      <th>Status</th>
      <th colspan="1"></th>
    </tr>
    </thead>

    <tbody>
    <% @buildings.each do |building| %>
      <tr>
        <td><%= building.code %></td>
        <td><%= building.description %></td>
        <td><%= building.campus.name %></td>
        <td><%= building.status.name %></td>
        <td>
          <%= link_to t('show'), building, class: 'btn btn-sm btn-info' %>
          <%= link_to t('edit'), edit_building_path(building), class: 'btn btn-sm btn-success' %>
          <%= link_to t('destroy'), building, method: :delete, data: { confirm: t('you_sure') }, class: 'btn btn-sm btn-danger' %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>
