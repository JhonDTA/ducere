<% provide :title, @turn_evaluation.name %>
<% provide :card_title, t('activerecord.models.turn_evaluation') %>
<% content_for :card_footer do %>
  <%= link_to t('edit'), edit_turn_evaluation_path(@turn_evaluation), class: 'btn btn-sm btn-success' %>
  <%= link_to t('back'), turn_evaluations_path, class: 'btn btn-sm btn-danger' %>
<% end %>

<%= render 'shared/cards/show' do %>
  <p>
    <strong>Cycle turn:</strong>
    <%= @turn_evaluation.cycle_turn.name %>
  </p>

  <p>
    <strong>Evaluation period:</strong>
    <%= @turn_evaluation.evaluation_period.name %>
  </p>
<% end %>
