<% provide(:title, t('edit_resource', resource: t('activerecord.models.turn_evaluation'))) %>
<% provide :card_title, t('activerecord.models.turn_evaluation') %>

<%= render 'shared/cards/form_card' do %>
  <%= render 'form', turn_evaluation: @turn_evaluation %>
  <% content_for :card_footer do %>
    <%= link_to @turn_evaluation, class: 'btn btn-sm btn-info' do %>
      <%= icon('fas', 'eye') %> <%= t('show') %>
    <% end %>
    <%= link_to turn_evaluations_path, class: 'btn btn-sm btn-danger' do %>
      <%= icon('fas', 'undo-alt') %> <%= t('back') %>
    <% end %>
  <% end %>
<% end %>
