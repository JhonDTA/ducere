<table>
  <thead>
  <tr>
    <th>Cycle turn</th>
    <th>Evaluation period</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @turn_evaluations.each do |turn_evaluation| %>
    <tr>
      <td><%= turn_evaluation.cycle_turn.name %></td>
      <td><%= turn_evaluation.evaluation_period.name %></td>
      <td><%= link_to t('show'), turn_evaluation %></td>
      <td><%= link_to t('edit'), edit_turn_evaluation_path(turn_evaluation) %></td>
      <td><%= link_to t('destroy'), turn_evaluation, method: :delete, data: { confirm: t('you_sure') } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Turn Evaluation', new_turn_evaluation_path %>
<%= will_paginate @turn_evaluations %>
