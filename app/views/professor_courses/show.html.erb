<% provide :title, @professor_course.name %>
<% provide :card_title, t('activerecord.models.professor_course') %>
<% content_for :card_footer do %>
  <%= link_to edit_professor_course_path(@professor_course), class: 'btn btn-sm btn-success' do %>
    <%= icon('fas', 'edit') %> <%= t('edit') %>
  <% end %>
  <%= link_to professor_courses_path, class: 'btn btn-sm btn-danger' do %>
    <%= icon('fas', 'undo-alt') %> <%= t('back') %>
  <% end %>
<% end %>

<%= render 'shared/cards/show' do %>
  <p>
    <strong>
      <%= t('activerecord.attributes.professor_course.professor_id') %>
      :</strong>
    <%= @professor_course.professor.name %>
  </p>

  <p>
    <strong>
      <%= t('activerecord.attributes.professor_course.course_id') %>:</strong>
    <%= @professor_course.course.name %>
  </p>
<% end %>
