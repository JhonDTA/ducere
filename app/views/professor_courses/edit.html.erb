<% provide(:title, t('edit_resource', resource: t('activerecord.models.professor_course'))) %>
<% provide :card_title, t('activerecord.models.professor_course') %>

<%= render 'shared/cards/form_card' do %>
  <%= render 'form', professor_course: @professor_course %>
  <% content_for :card_footer do %>
    <%= link_to @professor_course, class: 'btn btn-sm btn-info' do %>
      <%= icon('fas', 'eye') %> <%= t('show') %>
    <% end %>
    <%= link_to professor_courses_path, class: 'btn btn-sm btn-danger' do %>
      <%= icon('fas', 'undo-alt') %> <%= t('back') %>
    <% end %>
  <% end %>
<% end %>
