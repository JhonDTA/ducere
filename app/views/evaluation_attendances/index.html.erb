<% provide(:title, t('attendance_types')) %>

<% content_for :card_header do %>
  <%= will_paginate @attendance_types, class: 'pagination-sm float-right',
                    :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer %>
<% end %>

<% content_for :card_footer do %>
  <%= link_to t('new_resource', resource: t('activerecord.models.attendance_type')),
              new_attendance_type_path, class: 'btn btn-sm btn-primary' %>
  <%= will_paginate @attendance_types, class: 'pagination-sm m-0 float-right',
                    :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer %>
<% end %>

<%= render 'shared/cards/index_card' do %>
  <table class="table table-hover table-head-fixed text-nowrap">
    <thead>
    <tr>
      <th>Student course</th>
      <th>Attendance type</th>
      <th>Date</th>
      <th colspan="1"></th>
    </tr>
    </thead>

    <tbody>
    <% @evaluation_attendances.each do |evaluation_attendance| %>
      <tr>
        <td><%= evaluation_attendance.student_course.name %></td>
        <td><%= evaluation_attendance.attendance_type.name %></td>
        <td><%= evaluation_attendance.date %></td>
        <td>
          <%= link_to t('show'), evaluation_attendance, class: 'btn btn-sm btn-info' %>
          <%= link_to t('edit'), edit_evaluation_attendance_path(evaluation_attendance), class: 'btn btn-sm btn-success' %>
          <%= link_to t('destroy'), evaluation_attendance, method: :delete, data: { confirm: t('you_sure') }, class: 'btn btn-sm btn-danger' %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Evaluation Attendance', new_evaluation_attendance_path %>
  <%= will_paginate @evaluation_attendances %>
<% end %>
