<% provide(:title, t('schools')) %>

<h1><%= t('schools') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.school.name') %></th>
      <th><%= t('activerecord.attributes.school.code') %></th>
      <th><%= t('activerecord.attributes.school.country_id') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.code %></td>
        <td><%= school.country.name %></td>
        <td><%= link_to t('show'), school %></td>
        <td><%= link_to t('edit'), edit_school_path(school) %></td>
        <td><%= link_to t('destroy'), school, method: :delete, data: { confirm: t('you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('new_object', resource: t('activerecord.models.school')), new_school_path %>
