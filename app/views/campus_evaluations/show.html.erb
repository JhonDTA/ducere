<% provide :title, @campus_evaluation.name %>
<% provide :card_title, t('activerecord.models.campus_evaluation') %>
<% content_for :card_footer do %>
  <%= link_to edit_campus_evaluation_path(@campus_evaluation), class: 'btn btn-sm btn-success' do %>
    <%= icon('fas', 'edit') %> <%= t('edit') %>
  <% end %>
  <%= link_to campus_evaluations_path, class: 'btn btn-sm btn-danger' do %>
    <%= icon('fas', 'undo-alt') %> <%= t('back') %>
  <% end %>
<% end %>

<%= render 'shared/cards/show' do %>
  <p>
    <strong><%= t('activerecord.attributes.campus_evaluation.campus_id') %>
      :</strong>
    <%= @campus_evaluation.campus.name %>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.campus_evaluation.turn_evaluation_id') %>
      :</strong>
    <%= @campus_evaluation.turn_evaluation.name %>
  </p>
<% end %>
