<table>
  <thead>
  <tr>
    <th>Campus</th>
    <th>Turn evaluation</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @campus_evaluations.each do |campus_evaluation| %>
    <tr>
      <td><%= campus_evaluation.campus.name %></td>
      <td><%= campus_evaluation.turn_evaluation.name %></td>
      <td><%= link_to 'Show', campus_evaluation %></td>
      <td><%= link_to 'Edit', edit_campus_evaluation_path(campus_evaluation) %></td>
      <td><%= link_to 'Destroy', campus_evaluation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Campus Evaluation', new_campus_evaluation_path %>
<%= will_paginate @campus_evaluations %>
