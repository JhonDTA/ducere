<% provide :title, @cycle_type.name %>
<% provide :card_title, t('activerecord.models.cycle_type') %>
<% content_for :card_footer do %>
  <%= link_to t('edit'), edit_cycle_type_path(@cycle_type), class: 'btn btn-sm btn-success' %>
  <%= link_to t('back'), cycle_types_path, class: 'btn btn-sm btn-danger' %>
<% end %>

<%= render 'shared/cards/show' do %>
  <p>
    <strong><%= t('activerecord.attributes.cycle_type.code') %>:</strong>
    <%= @cycle_type.code %>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.cycle_type.name') %>:</strong>
    <%= @cycle_type.name %>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.cycle_type.description') %>:</strong>
    <%= @cycle_type.description %>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.cycle_type.duration') %>:</strong>
    <%= @cycle_type.duration %>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.cycle_type.status_id') %>:</strong>
    <%= @cycle_type.status.name %>
  </p>
<% end %>
