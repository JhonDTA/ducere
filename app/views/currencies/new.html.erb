<% provide(:title, t('new_resource', resource: t('activerecord.models.currency'))) %>
<% provide(:card_title, t('activerecord.models.currency')) %>

<%= render 'shared/cards/form_card' do %>
  <%= render 'form', currency: @currency %>
  <% content_for :card_footer do %>
    <%= link_to currencies_path, class: 'btn btn-sm btn-danger' do %>
      <%= icon('fas', 'undo-alt') %> <%= t('back') %>
    <% end %>
  <% end %>
<% end %>
