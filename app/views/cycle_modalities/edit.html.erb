<% provide(:title, t('edit_resource', resource: t('activerecord.models.cycle_modality'))) %>
<% provide :card_title, t('activerecord.models.cycle_modality') %>

<%= render 'shared/cards/form_card' do %>
  <%= render 'form', cycle_modality: @cycle_modality %>
  <% content_for :card_footer do %>
    <%= link_to @cycle_modality, class: 'btn btn-sm btn-info' do %>
      <%= icon('fas', 'eye') %> <%= t('show') %>
    <% end %>
    <%= link_to cycle_modalities_path, class: 'btn btn-sm btn-danger' do %>
      <%= icon('fas', 'undo-alt') %> <%= t('back') %>
    <% end %>
  <% end %>
<% end %>
