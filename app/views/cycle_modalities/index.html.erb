<% provide(:title, t('cycle_modalities')) %>

<% content_for :card_header do %>
  <%= will_paginate @cycle_modalities, class: 'pagination-sm float-right',
                    :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer %>
<% end %>

<% content_for :card_footer do %>
  <%= link_to new_cycle_modality_path, class: 'btn btn-sm btn-primary' do %>
    <%= icon('fas', 'plus-circle') %>
    <%= t('new_resource', resource: t('activerecord.models.cycle_modality')) %>
  <% end %>
  <%= will_paginate @cycle_modalities, class: 'pagination-sm m-0 float-right',
                    :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer %>
<% end %>

<%= render 'shared/cards/index_card' do %>
  <table class="table table-hover table-head-fixed text-nowrap">
    <thead>
    <tr>
      <th><%= t('activerecord.attributes.cycle_modality.academic_cycle_id') %></th>
      <th><%= t('activerecord.attributes.cycle_modality.modality_id') %></th>
      <th colspan="1"></th>
    </tr>
    </thead>

    <tbody>
    <% @cycle_modalities.each do |cycle_modality| %>
      <tr>
        <td><%= cycle_modality.academic_cycle.name %></td>
        <td><%= cycle_modality.modality.name %></td>
        <td>
          <%= link_to cycle_modality, class: 'btn btn-sm btn-info' do %>
            <%= icon('fas', 'eye') %> <%= t('show') %>
          <% end %>
          <%= link_to edit_cycle_modality_path(cycle_modality), class: 'btn btn-sm btn-success' do %>
            <%= icon('fas', 'edit') %> <%= t('edit') %>
          <% end %>
          <%= link_to cycle_modality, method: :delete, data: { confirm: t('you_sure') }, class: 'btn btn-sm btn-danger' do %>
            <%= icon('fas', 'trash-alt') %> <%= t('destroy') %>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>
