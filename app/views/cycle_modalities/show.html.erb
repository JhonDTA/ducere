<% provide :title, @cycle_modality.name %>
<% provide :card_title, t('activerecord.models.cycle_modality') %>
<% content_for :card_footer do %>
  <%= link_to edit_cycle_modality_path(@cycle_modality), class: 'btn btn-sm btn-success' do %>
    <%= icon('fas', 'edit') %> <%= t('edit') %>
  <% end %>
  <%= link_to cycle_modalities_path, class: 'btn btn-sm btn-danger' do %>
    <%= icon('fas', 'undo-alt') %> <%= t('back') %>
  <% end %>
<% end %>

<%= render 'shared/cards/show' do %>
  <p>
    <strong><%= t('activerecord.attributes.cycle_modality.academic_cycle_id') %>
      :</strong>
    <%= @cycle_modality.academic_cycle.name %>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.cycle_modality.modality_id') %>
      :</strong>
    <%= @cycle_modality.modality.name %>
  </p>
<% end %>
