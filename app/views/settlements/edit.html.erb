<% provide :title, t('edit_resource', resource: t('activerecord.models.settlement')) %>
<% provide :card_title, t('activerecord.models.settlement') %>

<%= render 'shared/cards/form_card' do %>
  <%= render 'form', settlement: @settlement %>
  <% content_for :card_footer do %>
    <%= link_to @settlement, class: 'btn btn-sm btn-info' do %>
      <%= icon('fas', 'eye') %> <%= t('show') %>
    <% end %>
    <%= link_to settlements_path, class: 'btn btn-sm btn-danger' do %>
      <%= icon('fas', 'undo-alt') %> <%= t('back') %>
    <% end %>
  <% end %>
<% end %>
