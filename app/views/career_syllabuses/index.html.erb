<% provide(:title, t('career_syllabuses')) %>

<% content_for :card_header do %>
  <%= will_paginate @career_syllabuses, class: 'pagination-sm float-right',
                    :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer %>
<% end %>

<% content_for :card_footer do %>
  <%= link_to new_career_syllabus_path, class: 'btn btn-sm btn-primary' do %>
    <%= icon('fas', 'plus-circle') %>
    <%= t('new_resource', resource: t('activerecord.models.career_syllabus')) %>
  <% end %>
  <%= will_paginate @career_syllabuses, class: 'pagination-sm m-0 float-right',
                    :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer %>
<% end %>

<%= render 'shared/cards/index_card' do %>
  <table class="table table-hover table-head-fixed text-nowrap">
    <thead>
    <tr>
      <th><%= t('activerecord.attributes.career_syllabus.career_id') %></th>
      <th><%= t('activerecord.attributes.career_syllabus.syllabus_id') %></th>
      <th colspan="1"></th>
    </tr>
    </thead>

    <tbody>
    <% @career_syllabuses.each do |career_syllabus| %>
      <tr>
        <td><%= career_syllabus.career.name %></td>
        <td><%= career_syllabus.syllabus.name %></td>
        <td>
          <%= link_to career_syllabus, class: 'btn btn-sm btn-info' do %>
            <%= icon('fas', 'eye') %> <%= t('show') %>
          <% end %>
          <%= link_to edit_career_syllabus_path(career_syllabus), class: 'btn btn-sm btn-success' do %>
            <%= icon('fas', 'edit') %> <%= t('edit') %>
          <% end %>
          <%= link_to career_syllabus, method: :delete, data: { confirm: t('you_sure') }, class: 'btn btn-sm btn-danger' do %>
            <%= icon('fas', 'trash-alt') %> <%= t('destroy') %>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>
