<% provide :title, @career_syllabus.name %>
<% provide :card_title, t('activerecord.models.career_syllabus') %>
<% content_for :card_footer do %>
  <%= link_to t('edit'), edit_career_syllabus_path(@career_syllabus), class: 'btn btn-sm btn-success' %>
  <%= link_to t('back'), career_syllabuses_path, class: 'btn btn-sm btn-danger' %>
<% end %>

<%= render 'shared/cards/show' do %>
  <p>
    <strong>Level career:</strong>
    <%= @career_syllabus.level_career.name %>
  </p>

  <p>
    <strong>Syllabus:</strong>
    <%= @career_syllabus.syllabus.name %>
  </p>
<% end %>
