<% provide :title, @level_career.name %>
<% provide :card_title, t('activerecord.models.level_career') %>
<% content_for :card_footer do %>
  <%= link_to edit_level_career_path(@level_career), class: 'btn btn-sm btn-success' do %>
    <%= icon('fas', 'edit') %> <%= t('edit') %>
  <% end %>
  <%= link_to level_careers_path, class: 'btn btn-sm btn-danger' do %>
    <%= icon('fas', 'undo-alt') %> <%= t('back') %>
  <% end %>
<% end %>

<%= render 'shared/cards/show' do %>
  <p>
    <strong>
      <%= t('activerecord.attributes.level_career.educative_level_id') %>
      :</strong>
    <%= @level_career.educative_level.name %>
  </p>

  <p>
    <strong>
      <%= t('activerecord.attributes.level_career.career_id') %>:</strong>
    <%= @level_career.career.name %>
  </p>
<% end %>
