<% provide(:title, t('edit_resource', resource: t('activerecord.models.institution'))) %>
<% provide :card_title, t('activerecord.models.institution') %>

<%= render 'shared/cards/form_card' do %>
  <%= render 'form', institution: @institution %>
  <% content_for :card_footer do %>
    <%= link_to @institution, class: 'btn btn-sm btn-info' do %>
      <%= icon('fas', 'eye') %> <%= t('show') %>
    <% end %>
    <%= link_to institutions_path, class: 'btn btn-sm btn-danger' do %>
      <%= icon('fas', 'undo-alt') %> <%= t('back') %>
    <% end %>
  <% end %>
<% end %>
