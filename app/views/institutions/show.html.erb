<% provide :title, @institution.name %>
<% provide :card_title, t('activerecord.models.institution') %>
<% content_for :card_footer do %>
  <%= link_to edit_institution_path(@institution), class: 'btn btn-sm btn-success' do %>
    <%= icon('fas', 'edit') %> <%= t('edit') %>
  <% end %>
  <%= link_to institutions_path, class: 'btn btn-sm btn-danger' do %>
    <%= icon('fas', 'undo-alt') %> <%= t('back') %>
  <% end %>
<% end %>

<%= render 'shared/cards/show' do %>
  <p>
    <strong>
      <%= t('activerecord.attributes.institution.code') %>:</strong>
    <%= @institution.code %>
  </p>

  <p>
    <strong>
      <%= t('activerecord.attributes.institution.name') %>:</strong>
    <%= @institution.name %>
  </p>

  <p>
    <strong>
      <%= t('activerecord.attributes.institution.description') %>:</strong>
    <%= @institution.description %>
  </p>

  <p>
    <strong>
      <%= t('activerecord.attributes.institution.country_id') %>:</strong>
    <%= @institution.country.name %>
  </p>

  <p>
    <strong>
      <%= t('activerecord.attributes.institution.status_id') %>:</strong>
    <%= @institution.status.name %>
  </p>
<% end %>
