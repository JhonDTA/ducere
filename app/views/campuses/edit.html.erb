<% provide(:title, t('edit_resource', resource: t('activerecord.models.campus'))) %>
<% provide :card_title, t('activerecord.models.campus') %>

<%= render 'shared/cards/form_card' do %>
  <%= render 'form', campus: @campus %>
  <% content_for :card_footer do %>
    <%= link_to @campus, class: 'btn btn-sm btn-info' do %>
      <%= icon('fas', 'eye') %> <%= t('show') %>
    <% end %>
    <%= link_to campuses_path, class: 'btn btn-sm btn-danger' do %>
      <%= icon('fas', 'undo-alt') %> <%= t('back') %>
    <% end %>
  <% end %>
<% end %>
