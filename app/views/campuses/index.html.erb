<p id="notice"><%= notice %></p>

<h1>Campuses</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Description</th>
      <th>Institution</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campuses.each do |campus| %>
      <tr>
        <td><%= campus.code %></td>
        <td><%= campus.name %></td>
        <td><%= campus.description %></td>
        <td><%= campus.institution_id %></td>
        <td><%= campus.status_id %></td>
        <td><%= link_to 'Show', campus %></td>
        <td><%= link_to 'Edit', edit_campus_path(campus) %></td>
        <td><%= link_to 'Destroy', campus, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

