<% provide(:title, t('edit_resource', resource: t('activerecord.models.syllabus_grade'))) %>
<% provide :card_title, t('activerecord.models.syllabus_grade') %>

<%= render 'shared/cards/form_card' do %>
  <%= render 'form', syllabus_grade: @syllabus_grade %>
  <% content_for :card_footer do %>
    <%= link_to @syllabus_grade, class: 'btn btn-sm btn-info' do %>
      <%= icon('fas', 'eye') %> <%= t('show') %>
    <% end %>
    <%= link_to syllabus_grades_path, class: 'btn btn-sm btn-danger' do %>
      <%= icon('fas', 'undo-alt') %> <%= t('back') %>
    <% end %>
  <% end %>
<% end %>
