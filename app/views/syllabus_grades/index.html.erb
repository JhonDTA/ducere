<% provide(:title, t('syllabus_grades')) %>

<% content_for :card_header do %>
  <%= will_paginate @syllabus_grades, class: 'pagination-sm float-right',
                    :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer %>
<% end %>

<% content_for :card_footer do %>
  <%= link_to t('new_resource', resource: t('activerecord.models.syllabus_grade')),
              new_syllabus_grade_path, class: 'btn btn-sm btn-primary' %>
  <%= will_paginate @syllabus_grades, class: 'pagination-sm m-0 float-right',
                    :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer %>
<% end %>

<%= render 'shared/cards/index_card' do %>
  <table class="table table-hover table-head-fixed text-nowrap">
    <thead>
    <tr>
      <th>Career syllabus</th>
      <th>Grade</th>
      <th colspan="1"></th>
    </tr>
    </thead>

    <tbody>
    <% @syllabus_grades.each do |syllabus_grade| %>
      <tr>
        <td><%= syllabus_grade.career_syllabus.name %></td>
        <td><%= syllabus_grade.grade.name %></td>
        <td>
          <%= link_to t('show'), syllabus_grade, class: 'btn btn-sm btn-info' %>
          <%= link_to t('edit'), edit_syllabus_grade_path(syllabus_grade), class: 'btn btn-sm btn-success' %>
          <%= link_to t('destroy'), syllabus_grade, method: :delete, data: { confirm: t('you_sure') }, class: 'btn btn-sm btn-danger' %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>
