<% provide :title, @syllabus_grade.name %>
<% provide :card_title, t('activerecord.models.syllabus_grade') %>
<% content_for :card_footer do %>
  <%= link_to edit_syllabus_grade_path(@syllabus_grade), class: 'btn btn-sm btn-success' do %>
    <%= icon('fas', 'edit') %> <%= t('edit') %>
  <% end %>
  <%= link_to syllabus_grades_path, class: 'btn btn-sm btn-danger' do %>
    <%= icon('fas', 'undo-alt') %> <%= t('back') %>
  <% end %>
<% end %>

<%= render 'shared/cards/show' do %>
  <p>
    <strong>
      <%= t('activerecord.attributes.syllabus_grade.career_syllabus_id') %>
      :</strong>
    <%= @syllabus_grade.career_syllabus.name %>
  </p>

  <p>
    <strong>
      <%= t('activerecord.attributes.syllabus_grade.grade_id') %>:</strong>
    <%= @syllabus_grade.grade.name %>
  </p>
<% end %>
