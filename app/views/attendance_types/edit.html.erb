<% provide(:title, t('edit_resource', resource: t('activerecord.models.attendance_type'))) %>
<% provide :card_title, t('activerecord.models.attendance_type') %>

<%= render 'shared/cards/form_card' do %>
  <%= render 'form', attendance_type: @attendance_type %>
  <% content_for :card_footer do %>
    <%= link_to @attendance_type, class: 'btn btn-sm btn-info' do %>
      <%= icon('fas', 'eye') %> <%= t('show') %>
    <% end %>
    <%= link_to attendance_types_path, class: 'btn btn-sm btn-danger' do %>
      <%= icon('fas', 'undo-alt') %> <%= t('back') %>
    <% end %>
  <% end %>
<% end %>
