<% provide(:title, t('attendance_types')) %>

<% content_for :card_header do %>
  <%= will_paginate @attendance_types, class: 'pagination-sm float-right',
                    :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer %>
<% end %>

<% content_for :card_footer do %>
  <%= link_to t('new_resource', resource: t('activerecord.models.attendance_type')),
              new_attendance_type_path, class: 'btn btn-sm btn-primary' %>
  <%= will_paginate @attendance_types, class: 'pagination-sm m-0 float-right',
                    :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer %>
<% end %>

<%= render 'shared/cards/index_card' do %>
  <table class="table table-hover table-head-fixed text-nowrap">
    <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
      <th colspan="1"></th>
    </tr>
    </thead>

    <tbody>
    <% @attendance_types.each do |attendance_type| %>
      <tr>
        <td><%= attendance_type.code %></td>
        <td><%= attendance_type.name %></td>
        <td><%= attendance_type.description %></td>
        <td><%= attendance_type.status.name %></td>
        <td>
          <%= link_to t('show'), attendance_type, class: 'btn btn-sm btn-info' %>
          <%= link_to t('edit'), edit_attendance_type_path(attendance_type), class: 'btn btn-sm btn-success' %>
          <%= link_to t('destroy'), attendance_type, method: :delete, data: { confirm: t('you_sure') }, class: 'btn btn-sm btn-danger' %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>
