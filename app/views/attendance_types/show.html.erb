<% provide :title, @attendance_type.name %>
<% provide :card_title, t('activerecord.models.attendance_type') %>
<% content_for :card_footer do %>
  <%= link_to t('edit'), edit_attendance_type_path(@attendance_type), class: 'btn btn-sm btn-success' %>
  <%= link_to t('back'), attendance_types_path, class: 'btn btn-sm btn-danger' %>
<% end %>

<%= render 'shared/cards/show' do %>
  <p>
    <strong><%= t('activerecord.attributes.attendance_type.code') %>:</strong>
    <%= @attendance_type.code %>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.attendance_type.name') %>:</strong>
    <%= @attendance_type.name %>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.attendance_type.description') %>:</strong>
    <%= @attendance_type.description %>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.attendance_type.status_id') %>:</strong>
    <%= @attendance_type.status.name %>
  </p>
<% end %>
