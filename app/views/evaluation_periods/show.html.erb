<% provide :title, @evaluation_period.name %>
<% provide :card_title, t('activerecord.models.evaluation_period') %>
<% content_for :card_footer do %>
  <%= link_to edit_evaluation_period_path(@evaluation_period), class: 'btn btn-sm btn-success' do %>
    <%= icon('fas', 'edit') %> <%= t('edit') %>
  <% end %>
  <%= link_to evaluation_periods_path, class: 'btn btn-sm btn-danger' do %>
    <%= icon('fas', 'undo-alt') %> <%= t('back') %>
  <% end %>
<% end %>

<%= render 'shared/cards/show' do %>
  <p>
    <strong>
      <%= t('activerecord.attributes.evaluation_period.code') %>:</strong>
    <%= @evaluation_period.code %>
  </p>

  <p>
    <strong>
      <%= t('activerecord.attributes.evaluation_period.name') %>:</strong>
    <%= @evaluation_period.name %>
  </p>

  <p>
    <strong>
      <%= t('activerecord.attributes.evaluation_period.description') %>
      :</strong>
    <%= @evaluation_period.description %>
  </p>

  <p>
    <strong>
      <%= t('activerecord.attributes.evaluation_period.status_id') %>:</strong>
    <%= @evaluation_period.status.name %>
  </p>
<% end %>
