<table>
  <thead>
  <tr>
    <th>Student course</th>
    <th>Mark</th>
    <th>Attendance</th>
    <th>Observations</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @course_marks.each do |course_mark| %>
    <tr>
      <td><%= course_mark.student_course.name %></td>
      <td><%= course_mark.mark %></td>
      <td><%= course_mark.attendance %></td>
      <td><%= course_mark.observations %></td>
      <td><%= link_to t('show'), course_mark %></td>
      <td><%= link_to t('edit'), edit_course_mark_path(course_mark) %></td>
      <td><%= link_to t('destroy'), course_mark, method: :delete, data: { confirm: t('you_sure') } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course Mark', new_course_mark_path %>
<%= will_paginate @course_marks %>
