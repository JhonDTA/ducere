<p id="notice"><%= notice %></p>

<h1>Course Marks</h1>

<table>
  <thead>
    <tr>
      <th>Student course</th>
      <th>Mark</th>
      <th>Attendance</th>
      <th>Observations</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_marks.each do |course_mark| %>
      <tr>
        <td><%= course_mark.student_course_id %></td>
        <td><%= course_mark.mark %></td>
        <td><%= course_mark.attendance %></td>
        <td><%= course_mark.observations %></td>
        <td><%= link_to 'Show', course_mark %></td>
        <td><%= link_to 'Edit', edit_course_mark_path(course_mark) %></td>
        <td><%= link_to 'Destroy', course_mark, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

