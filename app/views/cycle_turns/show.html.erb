<% provide :title, @cycle_turn.name %>
<% provide :card_title, t('activerecord.models.cycle_turn') %>
<% content_for :card_footer do %>
  <%= link_to edit_cycle_turn_path(@cycle_turn), class: 'btn btn-sm btn-success' do %>
    <%= icon('fas', 'edit') %> <%= t('edit') %>
  <% end %>
  <%= link_to cycle_turns_path, class: 'btn btn-sm btn-danger' do %>
    <%= icon('fas', 'undo-alt') %> <%= t('back') %>
  <% end %>
<% end %>

<%= render 'shared/cards/show' do %>
  <p>
    <strong><%= t('activerecord.attributes.cycle_turn.cycle_modality_id') %>
      :</strong>
    <%= @cycle_turn.cycle_modality.name %>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.cycle_turn.turn_id') %>:</strong>
    <%= @cycle_turn.turn.name %>
  </p>
<% end %>
