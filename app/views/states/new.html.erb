<% provide(:title, t('new_resource', resource: t('activerecord.models.state'))) %>
<% provide(:card_title, t('activerecord.models.state')) %>

<%= render 'shared/cards/form_card' do %>
  <%= render 'form', state: @state %>
  <% content_for :card_footer do %>
    <%= link_to states_path, class: 'btn btn-sm btn-danger' do %>
      <%= icon('fas', 'undo-alt') %> <%= t('back') %>
    <% end %>
  <% end %>
<% end %>
