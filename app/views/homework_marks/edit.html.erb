<% provide(:title, t('edit_resource', resource: t('activerecord.models.homework_mark'))) %>
<% provide :card_title, t('activerecord.models.homework_mark') %>

<%= render 'shared/cards/form_card' do %>
  <%= render 'form', homework_mark: @homework_mark %>
  <% content_for :card_footer do %>
    <%= link_to @homework_mark, class: 'btn btn-sm btn-info' do %>
      <%= icon('fas', 'eye') %> <%= t('show') %>
    <% end %>
    <%= link_to homework_marks_path, class: 'btn btn-sm btn-danger' do %>
      <%= icon('fas', 'undo-alt') %> <%= t('back') %>
    <% end %>
  <% end %>
<% end %>
