<table>
  <thead>
  <tr>
    <th>Code</th>
    <th>Name</th>
    <th>Description</th>
    <th>Status</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @careers.each do |career| %>
    <tr>
      <td><%= career.code %></td>
      <td><%= career.name %></td>
      <td><%= career.description %></td>
      <td><%= career.status.name %></td>
      <td><%= link_to t('show'), career %></td>
      <td><%= link_to t('edit'), edit_career_path(career) %></td>
      <td><%= link_to t('destroy'), career, method: :delete, data: { confirm: t('you_sure') } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Career', new_career_path %>
<%= will_paginate @careers %>
