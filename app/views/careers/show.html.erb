<% provide :title, @career.name %>
<% provide :card_title, t('activerecord.models.career') %>
<% content_for :card_footer do %>
  <%= link_to t('edit'), edit_career_path(@career), class: 'btn btn-sm btn-success' %>
  <%= link_to t('back'), careers_path, class: 'btn btn-sm btn-danger' %>
<% end %>

<%= render 'shared/cards/show' do %>
  <p>
    <strong><%= t('activerecord.attributes.career.code') %>:</strong>
    <%= @career.code %>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.career.name') %>:</strong>
    <%= @career.name %>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.career.description') %>:</strong>
    <%= @career.description %>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.career.status_id') %>:</strong>
    <%= @career.status.name %>
  </p>
<% end %>
