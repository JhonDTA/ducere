<div class="btn-group btn-group-sm">
  <%- if controller_name != 'sessions' %>
    <%= link_to t('sign_in'), new_session_path(resource_name),
                class: 'btn btn-sm btn-success' %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to t('sign_up'), new_registration_path(resource_name),
                class: 'btn btn-sm btn-primary' %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to t('forgot_password'), new_password_path(resource_name),
                class: 'btn btn-sm btn-warning' %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to t('not_confirmation'), new_confirmation_path(resource_name),
                class: 'btn btn-sm btn-danger' %>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to t('not_unlock'), new_unlock_path(resource_name),
                class: 'btn btn-sm btn-danger' %>
  <% end %>
</div>
