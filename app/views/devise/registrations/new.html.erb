<% provide(:title, t('sign_up')) %>

<div class="col-md-6 offset-md-3">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :first_name %><br/>
      <%= f.text_field :first_name, class: 'form-control', autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :last_name %><br/>
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label :second_last_name %><br/>
      <%= f.text_field :second_last_name, class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label :email %><br/>
      <%= f.email_field :email, class: 'form-control', autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em>(<%= t('password_minimum', char_count: @minimum_password_length) %>
          )</em>
      <% end %><br/>
      <%= f.password_field :password, class: 'form-control', autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br/>
      <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit t('sign_up'), class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
