<% provide(:title, t('sign_up')) %>
<% provide(:card_title, t('sign_up')) %>

<%= render 'shared/cards/form_card' do %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: 'form-control', autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label :second_last_name %>
      <%= f.text_field :second_last_name, class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control', autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <small>(<%= t('password_minimum', char_count: @minimum_password_length) %>
          )</small>
      <% end %>
      <%= f.password_field :password, class: 'form-control', autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit t('sign_up'), class: 'btn btn-primary form-control' %>
    </div>
  <% end %>

  <% content_for :card_footer do %>
    <%= render "devise/shared/links" %>
  <% end %>
<% end %>
