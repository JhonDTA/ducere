<% provide(:title, t('forgot_password')) %>
<% provide(:card_title, t('forgot_password')) %>

<%= render 'shared/cards/form_card' do %>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email" %>
    </div>

    <div class="actions">
      <%= f.submit t('send_password_instructions'), class: 'btn btn-primary form-control' %>
    </div>
  <% end %>

  <% content_for :card_footer do %>
    <%= render "devise/shared/links" %>
  <% end %>
<% end %>
