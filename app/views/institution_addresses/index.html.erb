<h1>Instution Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Institution</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @institution_addresses.each do |institution_address| %>
      <tr>
        <td><%= institution_address.institution_id %></td>
        <td><%= institution_address.address_id %></td>
        <td><%= link_to 'Show', institution_address %></td>
        <td><%= link_to 'Edit', edit_institution_address_path(institution_address) %></td>
        <td><%= link_to 'Destroy', institution_address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

