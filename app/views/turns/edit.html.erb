<% provide(:title, t('edit_resource', resource: t('activerecord.models.turn'))) %>
<% provide :card_title, t('activerecord.models.turn') %>

<%= render 'shared/cards/form_card' do %>
  <%= render 'form', turn: @turn %>
  <% content_for :card_footer do %>
    <%= link_to @turn, class: 'btn btn-sm btn-info' do %>
      <%= icon('fas', 'eye') %> <%= t('show') %>
    <% end %>
    <%= link_to turns_path, class: 'btn btn-sm btn-danger' do %>
      <%= icon('fas', 'undo-alt') %> <%= t('back') %>
    <% end %>
  <% end %>
<% end %>
