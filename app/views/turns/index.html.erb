<table>
  <thead>
  <tr>
    <th>Code</th>
    <th>Name</th>
    <th>Description</th>
    <th>Start</th>
    <th>Finish</th>
    <th>Status</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @turns.each do |turn| %>
    <tr>
      <td><%= turn.code %></td>
      <td><%= turn.name %></td>
      <td><%= turn.description %></td>
      <td><%= turn.start %></td>
      <td><%= turn.finish %></td>
      <td><%= turn.status.name %></td>
      <td><%= link_to t('show'), turn %></td>
      <td><%= link_to t('edit'), edit_turn_path(turn) %></td>
      <td><%= link_to t('destroy'), turn, method: :delete, data: { confirm: t('you_sure') } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Turn', new_turn_path %>
<%= will_paginate @turns %>
