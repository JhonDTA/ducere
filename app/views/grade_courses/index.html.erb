<table>
  <thead>
  <tr>
    <th>Syllabus grade</th>
    <th>Course</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @grade_courses.each do |grade_course| %>
    <tr>
      <td><%= grade_course.syllabus_grade.name %></td>
      <td><%= grade_course.course.name %></td>
      <td><%= link_to t('show'), grade_course %></td>
      <td><%= link_to t('edit'), edit_grade_course_path(grade_course) %></td>
      <td><%= link_to t('destroy'), grade_course, method: :delete, data: { confirm: t('you_sure') } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Grade Course', new_grade_course_path %>
<%= will_paginate @grade_courses %>
