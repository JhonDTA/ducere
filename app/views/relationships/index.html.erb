<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Status</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @relationships.each do |relationship| %>
    <tr>
      <td><%= relationship.name %></td>
      <td><%= relationship.status.name %></td>
      <td><%= link_to t('show'), relationship %></td>
      <td><%= link_to t('edit'), edit_relationship_path(relationship) %></td>
      <td><%= link_to t('destroy'), relationship, method: :delete, data: { confirm: t('you_sure') } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Relationship', new_relationship_path %>
<%= will_paginate @relationships %>
