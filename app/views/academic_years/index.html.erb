<% provide(:title, t('academic_years')) %>

<h1><%= t('academic_years') %></h1>

<table>
  <thead>
  <tr>
    <th><%= t('activerecord.attributes.academic_year.campu_id') %></th>
    <th><%= t('activerecord.attributes.academic_year.start') %></th>
    <th><%= t('activerecord.attributes.academic_year.finish') %></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @academic_years.each do |academic_year| %>
    <tr>
      <td><%= academic_year.campu.name %></td>
      <td><%= academic_year.start %></td>
      <td><%= academic_year.finish %></td>
      <td><%= link_to t('show'), academic_year %></td>
      <td><%= link_to t('edit'), edit_academic_year_path(academic_year) %></td>
      <td><%= link_to t('destroy'), academic_year, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to t('new_object', resource: t('activerecord.models.academic_year')), new_academic_year_path %>
