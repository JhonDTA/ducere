<% provide(:title, t('edit_resource', resource: t('activerecord.models.course_homework'))) %>
<% provide :card_title, t('activerecord.models.course_homework') %>

<%= render 'shared/cards/form_card' do %>
  <%= render 'form', course_homework: @course_homework %>
  <% content_for :card_footer do %>
    <%= link_to @course_homework, class: 'btn btn-sm btn-info' do %>
      <%= icon('fas', 'eye') %> <%= t('show') %>
    <% end %>
    <%= link_to course_homeworks_path, class: 'btn btn-sm btn-danger' do %>
      <%= icon('fas', 'undo-alt') %> <%= t('back') %>
    <% end %>
  <% end %>
<% end %>
