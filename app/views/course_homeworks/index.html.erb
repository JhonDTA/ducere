<% provide(:title, t('course_homeworks')) %>

<% content_for :card_header do %>
  <%= will_paginate @course_homeworks, class: 'pagination-sm float-right',
                    :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer %>
<% end %>

<% content_for :card_footer do %>
  <%= link_to t('new_resource', resource: t('activerecord.models.course_homework')),
              new_course_homework_path, class: 'btn btn-sm btn-primary' %>
  <%= will_paginate @course_homeworks, class: 'pagination-sm m-0 float-right',
                    :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer %>
<% end %>

<%= render 'shared/cards/index_card' do %>
  <table class="table table-hover table-head-fixed text-nowrap">
    <thead>
    <tr>
      <th>Course evaluation</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="1"></th>
    </tr>
    </thead>

    <tbody>
    <% @course_homeworks.each do |course_homework| %>
      <tr>
        <td><%= course_homework.course_evaluation.name %></td>
        <td><%= course_homework.name %></td>
        <td><%= course_homework.description %></td>
        <td>
          <%= link_to t('show'), course_homework, class: 'btn btn-sm btn-info' %>
          <%= link_to t('edit'), edit_course_homework_path(course_homework), class: 'btn btn-sm btn-success' %>
          <%= link_to t('destroy'), course_homework, method: :delete, data: { confirm: t('you_sure') }, class: 'btn btn-sm btn-danger' %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>
