<p id="notice"><%= notice %></p>

<h1>Course Homeworks</h1>

<table>
  <thead>
    <tr>
      <th>Course evaluation</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_homeworks.each do |course_homework| %>
      <tr>
        <td><%= course_homework.course_evaluation.name %></td>
        <td><%= course_homework.name %></td>
        <td><%= course_homework.description %></td>
        <td><%= link_to 'Show', course_homework %></td>
        <td><%= link_to 'Edit', edit_course_homework_path(course_homework) %></td>
        <td><%= link_to 'Destroy', course_homework, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

