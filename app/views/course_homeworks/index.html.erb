<table>
  <thead>
  <tr>
    <th>Course evaluation</th>
    <th>Name</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @course_homeworks.each do |course_homework| %>
    <tr>
      <td><%= course_homework.course_evaluation.name %></td>
      <td><%= course_homework.name %></td>
      <td><%= course_homework.description %></td>
      <td><%= link_to t('show'), course_homework %></td>
      <td><%= link_to t('edit'), edit_course_homework_path(course_homework) %></td>
      <td><%= link_to t('destroy'), course_homework, method: :delete, data: { confirm: t('you_sure') } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course Homework', new_course_homework_path %>
<%= will_paginate @course_homeworks %>
