<p id="notice"><%= notice %></p>

<h1>Campus Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Campus</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campus_addresses.each do |campus_address| %>
      <tr>
        <td><%= campus_address.campus_id %></td>
        <td><%= campus_address.address_id %></td>
        <td><%= link_to 'Show', campus_address %></td>
        <td><%= link_to 'Edit', edit_campus_address_path(campus_address) %></td>
        <td><%= link_to 'Destroy', campus_address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Campus Address', new_campus_address_path %>
