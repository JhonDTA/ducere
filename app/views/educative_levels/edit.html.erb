<% provide(:title, t('edit_resource', resource: t('activerecord.models.educative_level'))) %>
<% provide :card_title, t('activerecord.models.educative_level') %>

<%= render 'shared/cards/form_card' do %>
  <%= render 'form', educative_level: @educative_level %>
  <% content_for :card_footer do %>
    <%= link_to @educative_level, class: 'btn btn-sm btn-info' do %>
      <%= icon('fas', 'eye') %> <%= t('show') %>
    <% end %>
    <%= link_to educative_levels_path, class: 'btn btn-sm btn-danger' do %>
      <%= icon('fas', 'undo-alt') %> <%= t('back') %>
    <% end %>
  <% end %>
<% end %>
