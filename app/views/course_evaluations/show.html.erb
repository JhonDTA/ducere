<% provide :title, @course_evaluation.name %>
<% provide :card_title, t('activerecord.models.course_evaluation') %>
<% content_for :card_footer do %>
  <%= link_to edit_course_evaluation_path(@course_evaluation), class: 'btn btn-sm btn-success' do %>
    <%= icon('fas', 'edit') %> <%= t('edit') %>
  <% end %>
  <%= link_to course_evaluations_path, class: 'btn btn-sm btn-danger' do %>
    <%= icon('fas', 'undo-alt') %> <%= t('back') %>
  <% end %>
<% end %>

<%= render 'shared/cards/show' do %>
  <p>
    <strong><%= t('activerecord.attributes.course_evaluation.grade_course_id') %>
      :</strong>
    <%= @course_evaluation.grade_course.name %>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.course_evaluation.campus_evaluation_id') %>
      :</strong>
    <%= @course_evaluation.campus_evaluation.name %>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.course_evaluation.professor_id') %>
      :</strong>
    <%= @course_evaluation.professor.name %>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.course_evaluation.group_id') %>
      :</strong>
    <%= @course_evaluation.group.name %>
  </p>
<% end %>
