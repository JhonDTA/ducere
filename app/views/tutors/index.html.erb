<% provide(:title, t('tutors')) %>

<% content_for :card_header do %>
  <%= will_paginate @tutors, class: 'pagination-sm float-right',
                    :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer %>
<% end %>

<% content_for :card_footer do %>
  <%= link_to t('new_resource', resource: t('activerecord.models.tutor')),
              new_tutor_path, class: 'btn btn-sm btn-primary' %>
  <%= will_paginate @tutors, class: 'pagination-sm m-0 float-right',
                    :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer %>
<% end %>

<%= render 'shared/tables/index_card' do %>
  <table class="table table-hover table-head-fixed text-nowrap">
    <thead>
    <tr>
      <th>Student</th>
      <th>Parent</th>
      <th>Relationship</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @tutors.each do |tutor| %>
      <tr>
        <td><%= tutor.student.name %></td>
        <td><%= tutor.parent.name %></td>
        <td><%= tutor.relationship.name %></td>
        <td><%= link_to t('show'), tutor %></td>
        <td><%= link_to t('edit'), edit_tutor_path(tutor) %></td>
        <td><%= link_to t('destroy'), tutor, method: :delete, data: { confirm: t('you_sure') } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>
