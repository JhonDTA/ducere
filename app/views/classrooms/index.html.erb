<table>
  <thead>
  <tr>
    <th>Code</th>
    <th>Description</th>
    <th>Building</th>
    <th>Status</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @classrooms.each do |classroom| %>
    <tr>
      <td><%= classroom.code %></td>
      <td><%= classroom.description %></td>
      <td><%= classroom.building.code %></td>
      <td><%= classroom.status.name %></td>
      <td><%= link_to t('show'), classroom %></td>
      <td><%= link_to t('edit'), edit_classroom_path(classroom) %></td>
      <td><%= link_to t('destroy'), classroom, method: :delete, data: { confirm: t('you_sure') } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Classroom', new_classroom_path %>
<%= will_paginate @classrooms %>
