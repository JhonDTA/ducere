<% provide :title, @address.street %>
<% provide :card_title, t('activerecord.models.address') %>
<% content_for :card_footer do %>
  <%= link_to edit_address_path(@address), class: 'btn btn-sm btn-success' do %>
    <%= icon('fas', 'edit') %> <%= t('edit') %>
  <% end %>
  <%= link_to addresses_path, class: 'btn btn-sm btn-danger' do %>
    <%= icon('fas', 'undo-alt') %> <%= t('back') %>
  <% end %>
<% end %>

<%= render 'shared/cards/show' do %>
  <p>
    <strong><%= t('activerecord.attributes.address.settlement_id') %>:</strong>
    <%= @address.settlement.name %>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.address.street') %>:</strong>
    <%= @address.street %>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.address.interior_number') %>
      :</strong>
    <%= @address.interior_number %>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.address.exterior_number') %>
      :</strong>
    <%= @address.exterior_number %>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.address.reference') %>:</strong>
    <%= @address.reference %>
  </p>
<% end %>
