<% provide(:title, t('edit_resource', resource: t('activerecord.models.group'))) %>
<% provide :card_title, t('activerecord.models.group') %>

<%= render 'shared/cards/form_card' do %>
  <%= render 'form', group: @group %>
  <% content_for :card_footer do %>
    <%= link_to @group, class: 'btn btn-sm btn-info' do %>
      <%= icon('fas', 'eye') %> <%= t('show') %>
    <% end %>
    <%= link_to groups_path, class: 'btn btn-sm btn-danger' do %>
      <%= icon('fas', 'undo-alt') %> <%= t('back') %>
    <% end %>
  <% end %>
<% end %>
