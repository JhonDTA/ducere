<% provide(:title, t('groups')) %>

<% content_for :card_header do %>
  <%= will_paginate @groups, class: 'pagination-sm float-right',
                    :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer %>
<% end %>

<% content_for :card_footer do %>
  <%= link_to t('new_resource', resource: t('activerecord.models.group')),
              new_group_path, class: 'btn btn-sm btn-primary' %>
  <%= will_paginate @groups, class: 'pagination-sm m-0 float-right',
                    :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer %>
<% end %>

<%= render 'shared/tables/index_card' do %>
  <table class="table table-hover table-head-fixed text-nowrap">
    <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.code %></td>
        <td><%= group.name %></td>
        <td><%= group.description %></td>
        <td><%= group.status.name %></td>
        <td><%= link_to t('show'), group, class: 'btn btn-sm btn-info' %></td>
        <td><%= link_to t('edit'), edit_group_path(group), class: 'btn btn-sm btn-success' %></td>
        <td><%= link_to t('destroy'), group, method: :delete, data: { confirm: t('you_sure') }, class: 'btn btn-sm btn-danger' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>
