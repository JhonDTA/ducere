<table>
  <thead>
  <tr>
    <th>Code</th>
    <th>Name</th>
    <th>Description</th>
    <th>Status</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @groups.each do |group| %>
    <tr>
      <td><%= group.code %></td>
      <td><%= group.name %></td>
      <td><%= group.description %></td>
      <td><%= group.status.name %></td>
      <td><%= link_to t('show'), group %></td>
      <td><%= link_to t('edit'), edit_group_path(group) %></td>
      <td><%= link_to t('destroy'), group, method: :delete, data: { confirm: t('you_sure') } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Group', new_group_path %>
<%= will_paginate @groups %>
