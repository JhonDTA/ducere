<% provide :title, @status.name %>
<% provide :card_title, t('activerecord.models.status') %>
<% content_for :card_footer do %>
  <%= link_to edit_status_path(@status), class: 'btn btn-sm btn-success' do %>
    <%= icon('fas', 'edit') %> <%= t('edit') %>
  <% end %>
  <%= link_to statuses_path, class: 'btn btn-sm btn-danger' do %>
    <%= icon('fas', 'undo-alt') %> <%= t('back') %>
  <% end %>
<% end %>

<%= render 'shared/cards/show' do %>
  <p>
    <strong>
      <%= t('activerecord.attributes.status.code') %>:</strong>
    <%= @status.code %>
  </p>

  <p>
    <strong>
      <%= t('activerecord.attributes.status.name') %>:</strong>
    <%= @status.name %>
  </p>

  <p>
    <strong>
      <%= t('activerecord.attributes.status.description') %>:</strong>
    <%= @status.description %>
  </p>
<% end %>
