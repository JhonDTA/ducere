<% provide(:title, t('statuses')) %>

<div class="card">
  <div class="card-header">
    <h3 class="card-title">Fixed Header Table</h3>
    <div class="card-tools">
      <%= will_paginate @statuses, class: 'pagination-sm float-right',
                        :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer %>
    </div>
  </div>
  <div class="card-body table-responsive p-0" style="height: 65vh">
    <table class="table table-hover table-head-fixed text-nowrap">
      <thead>
      <tr>
        <th>Code</th>
        <th>Name</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @statuses.each do |status| %>
        <tr>
          <td><%= status.code %></td>
          <td><%= status.name %></td>
          <td><%= status.description %></td>
          <td>
            <div class="btn-group">
              <%= link_to t('show'), status, class: 'btn btn-sm btn-info' %>
              <%= link_to t('edit'), edit_status_path(status), class: 'btn btn-sm btn-success' %>
              <%= link_to t('destroy'), status, method: :delete, data: { confirm: t('you_sure') },
                          class: 'btn btn-sm btn-danger' %>
            </div>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="card-footer clearfix">
    <%= link_to 'New Status', new_status_path, class: 'btn btn-primary' %>
    <%= will_paginate @statuses, class: 'pagination-sm float-right',
                      :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer %>
  </div>
</div>
