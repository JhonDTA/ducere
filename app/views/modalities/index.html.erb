<table>
  <thead>
  <tr>
    <th>Code</th>
    <th>Name</th>
    <th>Description</th>
    <th>Status</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @modalities.each do |modality| %>
    <tr>
      <td><%= modality.code %></td>
      <td><%= modality.name %></td>
      <td><%= modality.description %></td>
      <td><%= modality.status.name %></td>
      <td><%= link_to t('show'), modality %></td>
      <td><%= link_to t('edit'), edit_modality_path(modality) %></td>
      <td><%= link_to t('destroy'), modality, method: :delete, data: { confirm: t('you_sure') } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Modality', new_modality_path %>
<%= will_paginate @modalities %>
