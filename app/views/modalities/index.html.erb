<% provide(:title, t('modalities')) %>

<% content_for :card_header do %>
  <%= will_paginate @modalities, class: 'pagination-sm float-right',
                    :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer %>
<% end %>

<% content_for :card_footer do %>
  <%= link_to t('new_resource', resource: t('activerecord.models.modality')),
              new_modality_path, class: 'btn btn-sm btn-primary' %>
  <%= will_paginate @modalities, class: 'pagination-sm m-0 float-right',
                    :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer %>
<% end %>

<%= render 'shared/cards/index_card' do %>
  <table class="table table-hover table-head-fixed text-nowrap">
    <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
      <th colspan="1"></th>
    </tr>
    </thead>

    <tbody>
    <% @modalities.each do |modality| %>
      <tr>
        <td><%= modality.code %></td>
        <td><%= modality.name %></td>
        <td><%= modality.description %></td>
        <td><%= modality.status.name %></td>
        <td>
          <%= link_to t('show'), modality, class: 'btn btn-sm btn-info' %>
          <%= link_to t('edit'), edit_modality_path(modality), class: 'btn btn-sm btn-success' %>
          <%= link_to t('destroy'), modality, method: :delete, data: { confirm: t('you_sure') }, class: 'btn btn-sm btn-danger' %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>
