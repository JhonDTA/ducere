<% provide :title, @grade.name %>
<% provide :card_title, t('activerecord.models.grade') %>
<% content_for :card_footer do %>
  <%= link_to edit_grade_path(@grade), class: 'btn btn-sm btn-success' do %>
    <%= icon('fas', 'edit') %> <%= t('edit') %>
  <% end %>
  <%= link_to grades_path, class: 'btn btn-sm btn-danger' do %>
    <%= icon('fas', 'undo-alt') %> <%= t('back') %>
  <% end %>
<% end %>

<%= render 'shared/cards/show' do %>
  <p>
    <strong>
      <%= t('activerecord.attributes.grade.name') %>:</strong>
    <%= @grade.name %>
  </p>

  <p>
    <strong>
      <%= t('activerecord.attributes.grade.sequence') %>:</strong>
    <%= @grade.sequence %>
  </p>

  <p>
    <strong>
      <%= t('activerecord.attributes.grade.description') %>:</strong>
    <%= @grade.description %>
  </p>

  <p>
    <strong>
      <%= t('activerecord.attributes.grade.status_id') %>:</strong>
    <%= @grade.status.name %>
  </p>
<% end %>
