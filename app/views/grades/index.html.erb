<h1>Grades</h1>

<table>
  <thead>
  <tr>
    <th>Code</th>
    <th>Name</th>
    <th>Description</th>
    <th>Status</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @grades.each do |grade| %>
    <tr>
      <td><%= grade.code %></td>
      <td><%= grade.name %></td>
      <td><%= grade.description %></td>
      <td><%= grade.status.name %></td>
      <td><%= link_to 'Show', grade %></td>
      <td><%= link_to 'Edit', edit_grade_path(grade) %></td>
      <td><%= link_to 'Destroy', grade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Grade', new_grade_path %>
<%= will_paginate @grades %>
