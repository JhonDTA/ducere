<% provide :title, @parent.name %>
<% provide :card_title, t('activerecord.models.parent') %>
<% content_for :card_footer do %>
  <%= link_to edit_parent_path(@parent), class: 'btn btn-sm btn-success' do %>
    <%= icon('fas', 'edit') %> <%= t('edit') %>
  <% end %>
  <%= link_to parents_path, class: 'btn btn-sm btn-danger' do %>
    <%= icon('fas', 'undo-alt') %> <%= t('back') %>
  <% end %>
<% end %>

<%= render 'shared/cards/show' do %>
  <p>
    <strong>
      <%= t('activerecord.attributes.parent.user_id') %>:</strong>
    <%= @parent.user.name %>
  </p>
<% end %>
