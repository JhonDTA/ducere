<table>
  <thead>
  <tr>
    <th>User</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @parents.each do |parent| %>
    <tr>
      <td><%= parent.user.name %></td>
      <td><%= link_to t('show'), parent %></td>
      <td><%= link_to t('edit'), edit_parent_path(parent) %></td>
      <td><%= link_to t('destroy'), parent, method: :delete, data: { confirm: t('you_sure') } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Parent', new_parent_path %>
<%= will_paginate @parents %>
