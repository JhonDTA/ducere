<% provide(:title, t('parents')) %>

<% content_for :card_header do %>
  <%= will_paginate @parents, class: 'pagination-sm float-right',
                    :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer %>
<% end %>

<% content_for :card_footer do %>
  <%= link_to t('new_resource', resource: t('activerecord.models.parent')),
              new_parent_path, class: 'btn btn-sm btn-primary' %>
  <%= will_paginate @parents, class: 'pagination-sm m-0 float-right',
                    :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer %>
<% end %>

<%= render 'shared/cards/index_card' do %>
  <table class="table table-hover table-head-fixed text-nowrap">
    <thead>
    <tr>
      <th>User</th>
      <th colspan="1"></th>
    </tr>
    </thead>

    <tbody>
    <% @parents.each do |parent| %>
      <tr>
        <td><%= parent.user.name %></td>
        <td>
          <%= link_to t('show'), parent, class: 'btn btn-sm btn-info' %>
          <%= link_to t('edit'), edit_parent_path(parent), class: 'btn btn-sm btn-success' %>
          <%= link_to t('destroy'), parent, method: :delete, data: { confirm: t('you_sure') }, class: 'btn btn-sm btn-danger' %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>
