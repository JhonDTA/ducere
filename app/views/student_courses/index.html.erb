<table>
  <thead>
  <tr>
    <th>Student</th>
    <th>Course evaluation</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @student_courses.each do |student_course| %>
    <tr>
      <td><%= student_course.student.name %></td>
      <td><%= student_course.course_evaluation.name %></td>
      <td><%= link_to t('show'), student_course %></td>
      <td><%= link_to t('edit'), edit_student_course_path(student_course) %></td>
      <td><%= link_to t('destroy'), student_course, method: :delete, data: { confirm: t('you_sure') } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student Course', new_student_course_path %>
<%= will_paginate @student_courses %>
