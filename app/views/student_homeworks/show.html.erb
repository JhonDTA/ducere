<% provide :title, @student_homework.name %>
<% provide :card_title, t('activerecord.models.student_homework') %>
<% content_for :card_footer do %>
  <%= link_to t('edit'), edit_student_homework_path(@student_homework), class: 'btn btn-sm btn-success' %>
  <%= link_to t('back'), student_homeworks_path, class: 'btn btn-sm btn-danger' %>
<% end %>

<%= render 'shared/cards/show' do %>
  <p>
    <strong>
      <% t('activerecord.attributes.student_homework.student_id') %>:</strong>
    <%= @student_homework.student.name %>
  </p>

  <p>
    <strong>
      <% t('activerecord.attributes.student_homework.course_homework_id') %>
      :</strong>
    <%= @student_homework.course_homework.name %>
  </p>

  <p>
    <strong>
      <% t('activerecord.attributes.student_homework.observations') %>:</strong>
    <%= @student_homework.observations %>
  </p>
<% end %>
