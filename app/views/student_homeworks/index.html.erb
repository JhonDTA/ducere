<p id="notice"><%= notice %></p>

<h1>Student Homeworks</h1>

<table>
  <thead>
    <tr>
      <th>Course homework</th>
      <th>Student</th>
      <th>Observations</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @student_homeworks.each do |student_homework| %>
      <tr>
        <td><%= student_homework.course_homework.name %></td>
        <td><%= student_homework.student.name %></td>
        <td><%= student_homework.observations %></td>
        <td><%= link_to 'Show', student_homework %></td>
        <td><%= link_to 'Edit', edit_student_homework_path(student_homework) %></td>
        <td><%= link_to 'Destroy', student_homework, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student Homework', new_student_homework_path %>
