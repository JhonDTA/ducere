<table>
  <thead>
  <tr>
    <th>Student</th>
    <th>Course homework</th>
    <th>Observations</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @student_homeworks.each do |student_homework| %>
    <tr>
      <td><%= student_homework.student.name %></td>
      <td><%= student_homework.course_homework.name %></td>
      <td><%= student_homework.observations %></td>
      <td><%= link_to t('show'), student_homework %></td>
      <td><%= link_to t('edit'), edit_student_homework_path(student_homework) %></td>
      <td><%= link_to t('destroy'), student_homework, method: :delete, data: { confirm: t('you_sure') } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student Homework', new_student_homework_path %>
<%= will_paginate @student_homeworks %>
