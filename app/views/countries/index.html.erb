<% provide(:title, t('countries')) %>

<h1><%= t('countries') %></h1>
<table>
  <thead>
  <tr>
    <th><%= t('activerecord.attributes.country.name') %></th>
    <th><%= t('activerecord.attributes.country.iso_code') %></th>
    <th><%= t('activerecord.attributes.country.calling_code') %></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @countries.each do |country| %>
    <tr>
      <td><%= country.name %></td>
      <td><%= country.iso_code %></td>
      <td><%= country.calling_code %></td>
      <td><%= link_to t('show'), country %></td>
      <td><%= link_to t('edit'), edit_country_path(country) %></td>
      <td><%= link_to t('destroy'), country, method: :delete, data: { confirm: t('you_sure') } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to t('new_object', resource: t('activerecord.models.country')), new_country_path %>
