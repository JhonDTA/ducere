<% provide(:title, t('edit_resource', resource: t('activerecord.models.country'))) %>
<% provide :card_title, t('activerecord.models.country') %>

<%= render 'shared/cards/form_card' do %>
  <%= render 'form', country: @country %>
  <% content_for :card_footer do %>
    <%= link_to t('show'), @country, class: 'btn btn-sm btn-info' %>
    <%= link_to t('back'), countries_path, class: 'btn btn-sm btn-danger' %>
  <% end %>
<% end %>
