<% provide(:title, t('edit_resource', resource: t('activerecord.models.student'))) %>
<% provide :card_title, t('activerecord.models.student') %>

<%= render 'shared/cards/form_card' do %>
  <%= render 'form', student: @student %>
  <% content_for :card_footer do %>
    <%= link_to @student, class: 'btn btn-sm btn-info' do %>
      <%= icon('fas', 'eye') %> <%= t('show') %>
    <% end %>
    <%= link_to students_path, class: 'btn btn-sm btn-danger' do %>
      <%= icon('fas', 'undo-alt') %> <%= t('back') %>
    <% end %>
  <% end %>
<% end %>
