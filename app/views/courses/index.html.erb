<table>
  <thead>
  <tr>
    <th>Code</th>
    <th>Name</th>
    <th>Description</th>
    <th>Credits</th>
    <th>Status</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @courses.each do |course| %>
    <tr>
      <td><%= course.code %></td>
      <td><%= course.name %></td>
      <td><%= course.description %></td>
      <td><%= course.credits %></td>
      <td><%= course.status.name %></td>
      <td><%= link_to t('show'), course %></td>
      <td><%= link_to t('edit'), edit_course_path(course) %></td>
      <td><%= link_to t('destroy'), course, method: :delete, data: { confirm: t('you_sure') } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path %>
<%= will_paginate @courses %>
