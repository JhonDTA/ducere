<!-- Content wrapper -->
<div class="content-wrapper">
  <!-- Content header -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0 text-dark"><%= yield(:title) %></h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><%= link_to t('home'), root_url %></li>
            <li class="breadcrumb-item"><%= link_to t(controller_name), controller_path %></li>
          </ol>
        </div>
      </div>
    </div>
  </section>
  <!-- Content body -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <%= render 'shared/alert' %>
          <%= yield %>
        </div>
      </div>
    </div>
  </section>
</div>
